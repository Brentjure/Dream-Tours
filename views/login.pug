extends base

block content 
    main
        .container.log-in-con
            .log-in-form
                span.subheading  Log into your account
                .form-container
                    form.acc-setting-form.form--login
                        div
                            label(for='email--login') Email address
                            input#email--login(type='email'  placeholder='you@example.com' required='' minlength='8')
                        div
                            label(for='password--login') Password
                            input#password--login(type='password' placeholder='••••••••' required='' minlength='8')
                        div 
                        div.forget
                            div.remember 
                                label(for="remember").form-remember
                                input#remember(type='checkbox')
                                | Remember Me
                            a.form-recovery(href='/resetPassword') Forgot Password?
                        div 
                            .log-in-btn
                                button(type="submit").btn Log in
                            
